<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_expense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    app:layout_insetEdge="none"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_expense_item_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RecyclerViewItemTitle"
        android:text="@string/reason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_expense_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RecyclerViewItemTitle"
        android:text="@string/how_much"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_expense_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="INFO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expense_item_reason" />

</android.support.constraint.ConstraintLayout>