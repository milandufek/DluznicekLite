<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/padding"
    android:id="@+id/itemCurrency">

    <TextView
        android:id="@+id/tv_currency_name"
        android:text="CurrencyName"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_currency_value"
        android:text="Value..."
        android:textColor="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_currency_name"

        />

    <ImageButton
        android:id="@+id/ibtn_currency_remove"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_currency_name"
        android:layout_centerVertical="true"
        android:background="?android:attr/panelBackground"
        app:srcCompat="@drawable/round_clear_black_36" />
</RelativeLayout>