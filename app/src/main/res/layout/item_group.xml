<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/padding"
    android:id="@+id/item_group">

    <TextView
        android:id="@+id/tv_group_name"
        android:text="GroupName"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_group_info"
        android:text="Group Info"
        android:textColor="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_group_name"
         />

    <ImageButton
        android:id="@+id/ibtn_group_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_group_name"
        android:layout_centerVertical="true"
        android:background="?android:attr/panelBackground"
        app:srcCompat="@drawable/round_clear_black_36" />
</RelativeLayout>